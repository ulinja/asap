# Contains configuration variables for the asap setup scripts.
# Source this file last in the asap scripts to override global saplib defaults.

export ASAP_WORKING_DIR='/root/.asap'

##### DO NOT CHANGE #####
export ASAP_CHECKPOINTFILE="$ASAP_WORKING_DIR/checkpoints"
export ASAP_FUNCTIONS='/usr/local/lib/asap/resources/asap_functions.sh'
export ASAP_LIB_DIR='/usr/local/lib/asap'
export ASAP_RESOURCES_DIR="$ASAP_LIB_DIR/resources"
export ASAP_SCRIPTS_DIR="$ASAP_LIB_DIR/stages"
#########################

